{
  "name": "@smartlyio/yavl-hooks",
  "version": "7.0.5",
  "license": "MIT",
  "description": "Collection of React hooks for YAVL",
  "author": "Smartly.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn tsc -p tsconfig.dist.json",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartlyio/yavl.git",
    "directory": "packages/yavl-hooks"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "typescript": ">=4 <6"
  },
  "dependencies": {
    "@smartlyio/yavl": "^7.0.5",
    "ramda": "^0.28.0"
  },
  "keywords": [
    "typescript",
    "server",
    "client",
    "model",
    "validation",
    "validator",
    "validate"
  ],
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.28",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^5.1.3"
  },
  "files": [
    "dist/*"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)(spec).+(js|ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "resetMocks": false,
    "clearMocks": true,
    "testTimeout": 1000
  }
}
