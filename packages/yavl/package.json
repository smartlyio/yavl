{
  "name": "@smartlyio/yavl",
  "version": "7.1.3",
  "license": "MIT",
  "description": "Declarative and type-safe model & validation library",
  "author": "Smartly.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn tsc -p tsconfig.dist.json",
    "clean": "rm -rf dist",
    "ts-node": "ts-node"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartlyio/yavl.git",
    "directory": "packages/yavl"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "typescript": ">=4 <6"
  },
  "dependencies": {
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2"
  },
  "keywords": [
    "typescript",
    "server",
    "client",
    "model",
    "validation",
    "validator",
    "validate"
  ],
  "files": [
    "dist/*",
    "src/*"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)(spec).+(js|ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "resetMocks": false,
    "clearMocks": true,
    "testTimeout": 1000
  }
}
