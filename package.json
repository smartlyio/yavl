{
  "name": "@smartlyio/yavl",
  "version": "6.0.7",
  "license": "MIT",
  "description": "Declarative and type-safe model & validation library",
  "author": "Smartly.io",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/smartlyio/yavl.git"
  },
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run --stream build",
    "clean": "lerna run clean",
    "reinstall": "rm -rf node_modules && yarn install",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts && yarn typecheck",
    "lint:fix": "eslint . --ext .ts --fix && yarn typecheck",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch",
    "test:all": "yarn lint && yarn test"
  },
  "keywords": [
    "typescript",
    "server",
    "client",
    "model",
    "validation",
    "validator",
    "validate"
  ],
  "devDependencies": {
    "@types/jest": "29.5.2",
    "@types/ramda": "0.28.11",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-jest": "27.2.2",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "jest": "29.5.0",
    "prettier": "2.2.1",
    "prettier-eslint": "12.0.0",
    "ts-jest": "29.1.0",
    "typescript": "^5.1.3",
    "lerna": "^8.1.8"
  },
  "files": [
    "dist/*"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)(spec).+(js|ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "resetMocks": false,
    "clearMocks": true,
    "testTimeout": 1000
  }
}
